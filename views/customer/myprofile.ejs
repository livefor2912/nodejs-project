    <body class="customer">
        <section class="breadcrumb_part" style="height: 120px;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb_iner">
                            <h2>my profile</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    <section class="confirmation_part section_padding" style="padding-top: 0;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="order_details_iner">
                        <form action="./myprofile" method="POST">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th style="font-size: large;" colspan="3">Username</th>
                                    <td><input type="text" class="form-control" name="txtUsername" value="<%= session.customer.username %>" readonly></td>
                                </tr>
                                <tr>
                                    <th style="font-size: large;" colspan="3">Password</th>
                                    <td><input type="password" name="txtPassword" class="form-control" value="<%= session.customer.password %>"" pattern=".{3,}" required /></td>
                                </tr>
                                <tr>
                                    <th style="font-size: large;" colspan="3">Name</th>
                                    <td><input type="text" name="txtName" class="form-control" value="<%= session.customer.name %>" required /></td>
                                </tr>
                                <tr>
                                    <th style="font-size: large;" colspan="3">Phone</th>
                                    <td><input type="tel" name="txtPhone" class="form-control" value="<%= session.customer.phone %>" pattern="0[0-9]{9}" required /></td>
                                </tr>
                                <tr>
                                    <th style="font-size: large;" colspan="3">Email</th>
                                    <td><input type="email" name="txtEmail" class="form-control" value="<%= session.customer.email %>" readonly /></td>
                                </tr>
                            </tbody>
                        </table>
                        <div style="margin-left: 480px;">
                            <input class="btn_1" type="submit" value="UPDATE"/>
                        </div>
                    </form> 
                    </div>
                </div>
            </div>
        </div>
