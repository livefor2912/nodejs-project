<html>

<head>
    <%- include('./_menu.ejs') %>
</head>

<body class="customer">
    <section class="breadcrumb_part" style="height: 120px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>list order</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%  if (orders) { %>
    <div class="row">
        <div class="col-sm-10 col-md-8 col-lg-10 m-lr-auto" style="margin-left: 130px;">
            <div class="order_details_iner" style="padding-top: 50px;">
                <table class="table table-striped" style="color: rgb(221, 190, 221);">
                    <thead style="background-color: white; padding-top: 50px;">
                        <tr
                            style="border-top: 2px solid gainsboro; border-bottom: 2px solid gainsboro; color: #5b2f79;">
                            <th>ID</th>
                            <th>Creation date</th>
                            <th>Cust.name</th>
                            <th>Cust.phone</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <%  for (var item of orders) { %>
                    <tr style="color: darkslateblue;" onclick="window.location='./myorders?id=<%=item._id%>'"
                        style="border-top: 2px solid gainsboro; border-bottom: 2px solid gainsboro;">
                        <th><%=item._id%></th>
                        <td><%=new Date(item.cdate).toLocaleString()%></td>
                        <td><%=item.customer.name%></td>
                        <td><%=item.customer.phone%></td>
                        <td><%=item.total%></td>
                        <td><%=item.status%></td>
                    </tr>
                    <%  } %>
                </table>
            </div>
        </div>
    </div>
    <%  } %>
    <%  if (order) { %>
    <section class="cart_area section_padding">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <h2 class="text-center">ORDER DETAIL</h2>
                    <table class="table">
                        <thead>
                            <tr>
                            <th>No.</th>
                            <th>Prod.ID</th>
                            <th>Prod.name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Amount</th>
                        </tr>
                        </thead>
                        <tbody>
                            <%  for (var [i, item] of order.items.entries()) {  %>
                            <tr class="datatable">
                                <td><%=(i+1)%></td>
                                <td><%=item.product._id%></td>
                                <td><%=item.product.name%></td>
                                <td><img src="data:image/jpg;base64,<%=item.product.image%>" width="70" height="70" />
                                </td>
                                <td><%=item.product.price%></td>
                                <td><%=item.quantity%></td>
                                <td><%=item.product.price * item.quantity%></td>
                            </tr>
                            <%  } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%  } %>
</body>

</html>