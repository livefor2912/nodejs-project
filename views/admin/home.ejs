<!doctype html>
<html lang="en">

<head>
    <%- include('./_link.ejs') %>
    <title>Fanwar - Admin Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

    <% for (var item of labels) { %>
    <input type="hidden" class="label-temp" value="<%=item%>" />
    <% } %>

    <% for (var item of data) { %>
    <input type="hidden" class="data-temp" value="<%=item%>" />
    <% } %>
    <script>
        const xlabels = [];
        var inputLabel = document.getElementsByClassName('label-temp');
        for (const iterator of inputLabel) {
            xlabels.push(iterator.value);
        }

        const ydata = [];
        var inputLabelData = document.getElementsByClassName('data-temp');
        for (const iterator of inputLabelData) {
            ydata.push(iterator.value);
        }
    </script>

    <% for (var item of labelZone) { %>
    <input type="hidden" class="label-zone" value="<%=item%>" />
    <% } %>

    <% for (var item of dataZone) { %>
    <input type="hidden" class="data-zone" value="<%=item%>" />
    <% } %>

    <script>
        const xlabelsZone = [];
        var inputLabelZone = document.getElementsByClassName('label-zone');
        for (const iterator of inputLabelZone) {
            xlabelsZone.push(iterator.value);
        }

        const ydataZone = [];
        var inputLabelDataZone = document.getElementsByClassName('data-zone');
        for (const iterator of inputLabelDataZone) {
            ydataZone.push(iterator.value);
        }
    </script>
</head>

<body>
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    <div class="dashboard-main-wrapper">
        <!-- ============================================================== -->
        <!-- navbar -->
        <!-- ============================================================== -->
        <%- include('./_sidebar.ejs') %>
        <!-- ============================================================== -->
        <!-- end left sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- wrapper  -->
        <!-- ============================================================== -->
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title">Admin Dashboard</h2>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item">
                                                <a href="home" class="breadcrumb-link">Dashboard</a>
                                            </li>
                                            <li class="breadcrumb-item active" aria-current="page">Admin Dashboard</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->
                    <div class="ecommerce-widget">
                        <div class="row">
                            <!-- ============================================================== -->
                            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0"> Products by Category</h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="categorychart"></canvas>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="row">
                                    <div class="col-lg-6 col-sm-6">
                                        <div class="card border-3 border-top border-top-primary">
                                            <div class="card-body">
                                                <h5 class="text-muted">Active Customer</h5>
                                                <div class="metric-value d-inline-block">
                                                    <h1 class="mb-1"><%=activeCust%></h1>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- ============================================================== -->
                                    <div class="col-lg-6 col-sm-6">
                                        <div class="card border-3 border-top border-top-primary">
                                            <div class="card-body">
                                                <h5 class="text-muted">Deactive Customers</h5>
                                                <div class="metric-value d-inline-block">
                                                    <h1 class="mb-1"><%=deactiveCust%></h1>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- ============================================================== -->
                                    <div class="col-lg-6 col-sm-6">
                                        <div class="card border-3 border-top border-top-primary">
                                            <div class="card-body">
                                                <h5 class="text-muted">Total Products</h5>
                                                <div class="metric-value d-inline-block">
                                                    <h1 class="mb-1"><%=quantityProds%></h1>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- ============================================================== -->
                                    <div class="col-lg-6 col-sm-6">
                                        <div class="card border-3 border-top border-top-primary">
                                            <div class="card-body">
                                                <h5 class="text-muted">Total Orders</h5>
                                                <div class="metric-value d-inline-block">
                                                    <h1 class="mb-1"><%=quantityOrders%></h1>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"> Products by Zone</h5>
                                </div>
                                <div class="card-body">
                                    <canvas id="zonechart"></canvas>
                                </div>
                            </div>
                        </div>
                        <!-- ============================================================== -->
                        <!-- sales  -->
                        <!-- ============================================================== -->
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                            <div class="card border-3 border-top border-top-primary">
                                <div class="card-body">
                                    <h5 class="text-muted">Sales</h5>
                                    <div class="metric-value d-inline-block">
                                        <h1 class="mb-1">$<%=sales%></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                            <div class="card border-3 border-top border-top-primary">
                                <div class="card-body">
                                    <h5 class="text-muted">Pending Orders</h5>
                                    <div class="metric-value d-inline-block">
                                        <h1 class="mb-1"><%=pendingOrder%></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <%- include('./_footer.ejs') %>
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end main wrapper  -->
    <!-- ============================================================== -->
</body>
<script>

    chartIt();
    function chartIt() {
        const ctx = document.getElementById('categorychart').getContext('2d');
        const categorychart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: xlabels,
                datasets: [{
                    label: '# of Products',
                    data: ydata,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            }
        });
    }

    chartZone();
    function chartZone() {
        const ctzone = document.getElementById('zonechart').getContext('2d');
        const categorychart = new Chart(ctzone, {
            "type": "polarArea",
            "data": {
                "labels": xlabelsZone,
                "datasets": [{
                    "label": "Products by zone", 
                    "data": ydataZone,
                    "backgroundColor": [
                        "rgb(255, 99, 132)",
                        "rgb(75, 192, 192)",
                        "rgb(255, 205, 86)",
                        "rgb(201, 203, 207)",
                        "rgb(54, 162, 235)",
                        "rgb(252, 132, 0)"
                    ]
                }]
            }
        });
    }

</script>

</html>