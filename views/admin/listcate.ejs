<!doctype html>
<html lang="en">

<head>
    <title>List Category</title>
    <%- include('./_link.ejs') %>
</head>

<body>
    <div class="dashboard-main-wrapper">
        <%- include('./_sidebar.ejs') %>

        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">

                    <!-- list categories -->
                    <div class="row">
                        <div class="col-xl-8 col-lg-6 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <h5 class="mb-0 card-header">List Category </h5>
                                <div class="card-body">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%  for (var item of cats) {  %>
                                            <tr>
                                                <th scope="row"><%=item._id%></th>
                                                <td onclick="window.location='./listcate?id=<%=item._id%>'" style="cursor: pointer;">
                                                    <%=item.name%>
                                                </td>
                                            </tr>
                                            <%  } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <h5 class="card-header">Add Category</h5>
                                <div class="card-body">
                                    <form class="form-group" method="POST">
                                        <th>Name</th>
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" name="name" required />
                                            <div class="input-group-append">
                                                <button type="submit" formaction="addcate"
                                                    class="btn btn-primary">Add</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <% if(details) { %>
                            <div class="card" id="cate-detail">
                                <h5 class="card-header">Category Details</h5>
                                <div class="card-body">
                                    <form class="form-group" method="POST">
                                        <div class="input-group mb-3">
                                            <input value="<%=details._id%>" id="txtID" type="text" class="form-control" name="id" readonly>
                                        </div>
                                        <div class="input-group mb-3">
                                            <input value="<%=details.name%>" id="txtName" type="text" class="form-control" name="name" required>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-9 input-group-append">
                                                <button type="submit" formaction="updatecate"
                                                    class="btn btn-primary">Update</button>
                                            </div>
                                            <% if(isProductCategory) { %>
                                            <div class="input-group-append col-md-3">
                                                <button type="submit" formaction="deletecate" class="btn btn-default"
                                                    onclick="return confirm('Are you sure you want to delete this?')">
                                                    Delete
                                                </button>
                                            </div>
                                            <% } %>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        <!-- end list categories -->
                    </div>
                </div>
                <%- include('./_footer.ejs') %>
            </div>           
        </div>
    </div>
</body>

</html>